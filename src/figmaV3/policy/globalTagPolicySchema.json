{
  "version": "1.4",

  "groups": {
    "Layout.Display&Flow": {
      "styleKeys": ["display","flexDirection","flexWrap","order","justifyContent","alignItems","alignContent","gap","rowGap","columnGap","overflow","overflowX","overflowY","visibility"]
    },
    "Layout.Position": {
      "styleKeys": ["position","top","right","bottom","left","inset","zIndex","float","clear"]
    },
    "Layout.Sizing": {
      "styleKeys": ["boxSizing","width","height","minWidth","minHeight","maxWidth","maxHeight","aspectRatio","objectFit","objectPosition"]
    },
    "Layout.Spacing": {
      "styleKeys": ["margin","marginTop","marginRight","marginBottom","marginLeft","padding","paddingTop","paddingRight","paddingBottom","paddingLeft"]
    },

    "Typography.Font": {
      "styleKeys": ["fontFamily","fontSize","fontWeight","fontStyle","fontVariant","lineHeight","letterSpacing"]
    },
    "Typography.Text": {
      "styleKeys": ["textAlign","textDecoration","textTransform","whiteSpace","wordBreak","overflowWrap","textOverflow","direction"]
    },
    "Typography.Content Flow": {
      "styleKeys": ["listStyle","listStyleType","listStylePosition","listStyleImage","verticalAlign"]
    },

    "Appearance.Fill": {
      "styleKeys": ["background","backgroundColor","backgroundImage","backgroundSize","backgroundRepeat","backgroundPosition","backgroundClip","backgroundOrigin","backgroundAttachment"]
    },
    "Appearance.Border": {
      "styleKeys": ["border","borderWidth","borderStyle","borderColor","borderTop","borderRight","borderBottom","borderLeft","borderRadius","outline","outlineColor","outlineStyle","outlineWidth"]
    },
    "Appearance.Visual": {
      "styleKeys": ["boxShadow","opacity","mixBlendMode","filter","backdropFilter","cursor"]
    },

    "Effects.Transform": {
      "styleKeys": ["transform","transformOrigin","perspective"]
    },
    "Effects.Transition": {
      "styleKeys": ["transition","transitionProperty","transitionDuration","transitionTimingFunction","transitionDelay","animation","animationName","animationDuration","animationTimingFunction","animationDelay","animationIterationCount","animationDirection","animationFillMode","animationPlayState"]
    },

    "Interactive.UserInteraction": {
      "styleKeys": ["pointerEvents","userSelect","touchAction","caretColor","scrollBehavior","scrollSnapType","scrollSnapAlign","accentColor"]
    },

    "Advanced.Advanced / Overrides": {
      "styleKeys": ["--*","contain","isolation","clipPath","mask","maskImage","maskSize","maskRepeat","resize","willChange","appearance","content"]
    }
  },

  "common": {
    "sections": [
      { "group": "Layout.Display&Flow" },
      { "group": "Layout.Position" },
      { "group": "Layout.Sizing" },
      { "group": "Layout.Spacing" },

      { "group": "Typography.Font" },
      { "group": "Typography.Text" },
      { "group": "Typography.Content Flow" },

      { "group": "Appearance.Fill" },
      { "group": "Appearance.Border" },
      { "group": "Appearance.Visual" },

      { "group": "Effects.Transform" },
      { "group": "Effects.Transition" },

      { "group": "Interactive.UserInteraction" },

      { "group": "Advanced.Advanced / Overrides" }
    ],

    "attrs": {
      "allow": ["id","class","title","role","tabIndex","aria-*","data-*"],
      "deny": []
    },

    "events": {
      "allow": ["onClick","onMouseEnter","onMouseLeave","onFocus","onBlur","onKeyDown","onKeyUp"],
      "deny": []
    },

    "styles": {
      "allow": ["*"],
      "deny": ["content"]
    }
  },

  "tags": {
    "div": {},

    "span": {
      "sections": [
        { "group": "Layout.Sizing", "denyStyles": ["width","height","minWidth","minHeight","maxWidth","maxHeight"] }
      ]
    },

    "p": {
      "sections": [
        { "group": "Layout.Sizing", "denyStyles": ["width","height"] }
      ]
    },

    "h1": { "sections": [ { "group": "Layout.Sizing", "denyStyles": ["height"] } ] },
